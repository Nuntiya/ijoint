<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kanmanus.kmutt.sit.ijoint" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kanmanus.kmutt.sit.ijoint.SignInActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher_white"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kanmanus.kmutt.sit.ijoint.TasksActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.kanmanus.kmutt.sit.ijoint.CalibrationActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.kanmanus.kmutt.sit.ijoint.PerformActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.kanmanus.kmutt.sit.ijoint.PerformABFActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
